<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iri="https://irihi.tech/shared"
             x:Class="Irihi.Avalonia.Shared.HeadlessTest.ThicknessConverterView">
    <StackPanel>
        <Button
            Name="button1"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter}}" />
        <Button
            Name="button2"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter 'Vertical,Right'}}" />
        <Button
            Name="button3"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter Horizontal}}" />
        <Button
            Name="button4"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter TopLeft}}" />
        <Button
            Name="button5"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter None}}" />
        <Button
            Name="button6"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter Bottom}}" />
        <Button
            Name="button7"
            Padding="20"
            Margin="{Binding $self.Padding,Converter={iri:ThicknessConverter 'Vertical,BottomLeft'}}" />
    </StackPanel>
</UserControl>