<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iri="https://irihi.tech/shared"
             x:Class="Irihi.Avalonia.Shared.HeadlessTest.ThicknessConverterView">
    <Button
        Name="button"
        Padding="20"
        Margin="{Binding $self.Padding,
        Converter={iri:ThicknessConverter 'Top,Right,Bottom'}}" />
</UserControl>